varnishtest "Test cookie vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import cookie from "${vmod_topbuild}/src/.libs/libvmod_cookie.so";

	sub vcl_deliver {
		set resp.http.X-hello = cookie.get_string("session-id");
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.hello == "Hello, World"
}

client c1 -run
